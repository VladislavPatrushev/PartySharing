<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.nsu.bd.partysharing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application

        android:name="ru.nsu.bd.partysharing.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Gathr"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.nsu.bd.partysharing.features.splash.SplashActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.search.presentation.SearchActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.register.presentation.RegisterActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.feed.presentation.FeedActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.feed.presentation.PendingActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.profile.presentation.ProfileActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.event.presentation.EventActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="ru.nsu.bd.partysharing.features.create.presentation.CreateEventActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan"></activity>

    </application>

</manifest>